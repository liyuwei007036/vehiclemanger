<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/picTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionsheet_pic_selector"
        android:gravity="center"
        android:padding="15dp"
        android:text="相册"
        android:textColor="#037BFF"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D8D8D8"></View>

    <TextView
        android:id="@+id/camTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picTextView"
        android:background="@drawable/actionsheet_cam_selector"
        android:gravity="center"
        android:padding="15dp"
        android:text="拍照"
        android:textColor="#037BFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cancelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camTextView"
        android:layout_marginTop="10dp"
        android:background="@drawable/actionsheet_selector"
        android:gravity="center"
        android:padding="15dp"
        android:text="取消"
        android:textColor="#8F8F8F"
        android:textSize="16sp" />

</LinearLayout>
